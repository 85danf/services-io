{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "removeComments": true
  },
  "include": [
    "js/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "test/**/*"
  ]
}